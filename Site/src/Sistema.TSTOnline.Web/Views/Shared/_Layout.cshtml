@using Microsoft.Extensions.Configuration

@inject IConfiguration _configuration

@{
    var url = _configuration.GetSection("Base:URL").Value;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="theme-color" content="#00ace6">
    <meta name="apple-mobile-web-app-status-bar-style" content="#00ace6">
    <link rel="apple-touch-icon" sizes="76x76" href="~/images/Icone.png">
    <title>TST Online</title>

    <link href="@url/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="@url/assets/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="@url/assets/css/jquery.bootgrid.min.css" rel="stylesheet" />
    <link href="@url/assets/css/datatables.css" rel="stylesheet" />
    <link href="@url/assets/css/template.css" rel="stylesheet" />

    <link rel="shortcut icon" type="image/png" href="@url/assets/images/favicon.png" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/select/1.2.7/css/select.dataTables.min.css">

    <!-- BIBLIOTECA ONLINE DE ÍCONES DO SISTEMA -->

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <!-- BIBLIOTECA DE NOTIFICAÇÕES -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>

<body>

    <script>
        function backToHome() {
            window.top.location.href = '@url';
        }
    </script>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center text-uppercase"><i class="fas fa-laptop-code"></i> <strong>@ViewData["Title"]</strong></h4>
            </div>
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </div>

    <script type="text/javascript" src="@url/assets/js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="@url/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="@url/assets/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="@url/assets/js/jquery-ui.js"></script>
    <script type="text/javascript" src="@url/assets/js/jquery.mask.min.js"></script>
    <script type="text/javascript" src="@url/assets/js/mask.js"></script>
    <script type="text/javascript" src="@url/assets/js/jquery.bootgrid.js"></script>
    <script type="text/javascript" src="@url/assets/js/datatables.js"></script>
    <script type="text/javascript" src="@url/assets/js/script_cep.js"></script>
    <script type="text/javascript" src="@url/assets/js/script_cep2.js"></script>
    <script type="text/javascript" src="//gyrocode.github.io/jquery-datatables-checkboxes/1.2.11/js/dataTables.checkboxes.min.js"></script>


    <!-- SCRIPTS LOCAIS -->
    <script type="text/javascript" src="~/js/comum/main.js"></script>
    <script type="text/javascript" src="~/js/comum/loadData.js"></script>
    <script type="text/javascript" src="~/js/comum/utils.js"></script>
    <script type="text/javascript" src="~/js/comum/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="~/js/comum/jquery.serializejson.min.js"></script>

    <!-- BIBLIOTECA DE NOTIFICAÇÕES -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
