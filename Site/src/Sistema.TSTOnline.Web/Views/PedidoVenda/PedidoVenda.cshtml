@using Sistema.TSTOnline.Domain.Utils;

@{
    ViewData["Title"] = "PEDIDOS DE VENDA";
}

<div class="row justify-content-center">
    <div class="btn-group">
        <a href="/pedidovenda/pedidoVendaAddEdit" class="btn btn-primary">
            <i class="fa fa-plus fa-lg"></i> Novo Pedido de Venda
        </a>
        <button class="btn btn-danger" onClick="backToHome()"><i class="fa fa-undo fa-lg"></i> Voltar</button>
    </div>
</div>

<div class="table-responsive">
    <table id="tblPedidoVenda" class="table table-striped table-bordered table-hover">
        <thead class="text-uppercase">
            <tr>
                <th data-column-id="id" data-type="numeric">Código</th>
                <th width="10%" data-column-id="dataCadastro">Data Cadastro</th>
                <th width="10%" data-column-id="dataVenda">Data Venda</th>
                <th width="20%" data-column-id="razaoSocial">Cliente</th>
                <th width="20%" data-column-id="vendedorNome">Vendedor</th>
                <th width="20%" data-column-id="statusDescricao">Status</th>
                <th width="10%" data-column-id="commands1">Editar</th>
                <th width="10%" data-column-id="commands3">Fechar Pedido</th>
                <th width="10%" data-column-id="commands3">Cancelar</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@await Html.PartialAsync("~/Views/Shared/_ConfirmActionPartial.cshtml", 1)

@await Html.PartialAsync("~/Views/Shared/_ConfirmActionPartial.cshtml", 2)

@section Scripts{
    <script src="~/js/pedidovenda/pedidoVenda.js?v=@Helper.GetVersion()"></script>
}