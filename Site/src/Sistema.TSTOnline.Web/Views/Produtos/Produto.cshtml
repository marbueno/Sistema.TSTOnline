@{
    ViewData["Title"] = "PRODUTOS";
}

<div class="row justify-content-center">
    <div class="btn-group">
        <a href="/produtos/ProdutoAddEdit" class="btn btn-primary">
            <i class="fa fa-plus fa-lg"></i> Novo Produto
        </a>
        <button class="btn btn-danger" onClick="backToHome()"><i class="fa fa-undo fa-lg"></i> Voltar</button>
    </div>
</div>

<div class="table-responsive">
    <table id="tblProduto" class="table table-striped table-bordered table-hover">
        <thead class="text-uppercase">
            <tr>
                <th data-column-id="id" data-type="numeric">Código</th>
                <th width="10%" data-column-id="sku">SKU</th>
                <th width="20%" data-column-id="nome">Nome</th>
                <th width="20%" data-column-id="fornecedorNome">Fornecedor</th>
                <th width="20%" data-column-id="categoriaDescricao">Categoria</th>
                <th width="10%" data-column-id="preco">Preço</th>
                <th width="10%" data-column-id="commands1">Editar</th>
                <th width="10%" data-column-id="commands3">Delete</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

</div>

@await Html.PartialAsync("~/Views/Shared/_ConfirmActionPartial.cshtml")

@section Scripts{
    <script src="~/js/produtos/produto.js"></script>
}