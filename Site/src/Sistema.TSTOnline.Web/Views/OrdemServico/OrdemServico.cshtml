<div class="table-responsive">
    <table id="tblOrdemServico" class="table table-striped table-bordered table-hover">
        <thead class="text-uppercase">
            <tr>
                <th data-column-id="id" data-type="numeric">Código</th>
                <th width="10%" data-column-id="dataCadastro">Data Cadastro</th>
                <th width="10%" data-column-id="dataServico">Data Serviço</th>
                <th width="20%" data-column-id="statusDescricao">Status</th>
                <th width="20%" data-column-id="razaoSocial">Cliente</th>
                <th width="20%" data-column-id="responsavelNome">Responsável</th>
                <th width="20%" data-column-id="localDescricao">Local</th>
                <th width="10%" data-column-id="commands1">Editar</th>
                <th width="10%" data-column-id="commands3">Cancelar</th>
                <th width="10%" data-column-id="commands1">Imprimir O.S</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@await Html.PartialAsync("~/Views/Shared/_ConfirmActionPartial.cshtml", 1)

@section Scripts{
    <script src="~/js/ordemservico/ordemServico.js?v=@Helper.GetVersion()"></script>
}