@using Sistema.TSTOnline.Domain.Utils;

@{
    ViewData["Title"] = "ORDENS DE SERVIÇO";
}

<div class="row justify-content-center">
    <div class="btn-group">
        <a href="/ordemservico/ordemServicoAddEdit" class="btn btn-primary">
            <i class="fa fa-plus fa-lg"></i> Nova Ordem de Serviço
        </a>
        <button class="btn btn-danger" onClick="backToHome()"><i class="fa fa-undo fa-lg"></i> Voltar</button>
