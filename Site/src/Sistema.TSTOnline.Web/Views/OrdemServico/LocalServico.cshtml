@using Sistema.TSTOnline.Domain.Utils;

@{
    ViewData["Title"] = "LOCAIS DE SERVIÇOS";
}

<div class="row justify-content-center">
    <div class="btn-group">
        <a href="/ordemservico/LocalServicoAddEdit" class="btn btn-primary">
            <i class="fa fa-plus fa-lg"></i> Novo Local de Serviço
        </a>
        <button class="btn btn-danger" onClick="backToHome()"><i class="fa fa-undo fa-lg"></i> Voltar</button>
    </div>
</div>

<div class="table-responsive">
    <table id="tblLocalServico" class="table table-striped table-bordered table-hover">
        <thead class="text-uppercase">
            <tr>
                <th data-column-id="id" data-type="numeric">Código</th>
                <th width="30%" data-column-id="nome">Nome</th>
                <th width="15%" data-column-id="cep">CEP</th>
                <th width="15%" data-column-id="bairro">Bairro</th>
                <th width="10%" data-column-id="commands1">Editar</th>
                <th width="10%" data-column-id="commands3">Delete</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

</div>

@await Html.PartialAsync("~/Views/Shared/_ConfirmActionPartial.cshtml", 0)

@section Scripts{
    <script src="~/js/ordemservico/localServico.js?v=@Helper.GetVersion()"></script>
}