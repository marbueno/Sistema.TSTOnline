@using Sistema.TSTOnline.Domain.Utils;

@{
    ViewData["Title"] = "VENDEDORES";
}

<div class="row justify-content-center">
    <div class="btn-group">
        <a href="/cadastros/vendedorAddEdit" class="btn btn-primary">
            <i class="fa fa-plus fa-lg"></i> Novo Vendedor
        </a>
        <button class="btn btn-danger" onClick="backToHome()"><i class="fa fa-undo fa-lg"></i> Voltar</button>
    </div>
</div>

<div class="table-responsive">
    <table id="tblVendedor" class="table table-striped table-bordered table-hover">
        <thead class="text-uppercase">
            <tr>
                <th data-column-id="id" data-type="numeric">Código</th>
                <th width="30%" data-column-id="nome">Nome</th>
                <th width="15%" data-column-id="rg">RG</th>
                <th width="15%" data-column-id="cpf">CPF</th>
                <th width="20%" data-column-id="dataNascimento">Data Nascimento</th>
                <th width="10%" data-column-id="commands1">Editar</th>
                <th width="10%" data-column-id="commands3">Delete</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

</div>

@await Html.PartialAsync("~/Views/Shared/_ConfirmActionPartial.cshtml", 0)

@section Scripts{
    <script src="~/js/cadastros/vendedor.js?v=@Helper.GetVersion()"></script>
}