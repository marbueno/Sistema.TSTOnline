@{
    ViewData["Title"] = "Quadras";
}

<div id="appQuadra" class="content">
    <div class="card">
        <div v-if="appMain.newRegister === false">
            <div class="row">
                <div class="col-md-12" style="margin-left: 20px; margin-top: 20px;">
                    <button class="btn btn-fill btn-info" v-on:click="newRegister()">Novo Registro</button>
                </div>
            </div>

            <hr />

            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblQuadra" class="table tablesorter" cellspacing="0" width="100%">
                        <thead class="text-primary">
                            <tr>
                                <th>Código</th>
                                <th>Nome</th>
                                <th>Endereço</th>
                                <th>Número</th>
                                <th>Bairro</th>
                                <th style="width:15px;"></th>
                                <th style="width:15px;"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <div v-if="appMain.newRegister">

            <div class="row">
                <div class="col-md-12">
                    <div class="card-header">
                        <h5 class="title">Criar/Editar Quadras</h5>
                    </div>
                    <section>
                        <form id="frmQuadra" action="QuadraCreateOrUpdate" method="post" class="form" data-ajax="true"
                              data-ajax-method="POST" data-ajax-failure="formOnFail" data-ajax-success="window.location = '/Admin/Cadastros/Quadra'">
                            <div class="card-body">
                                <input type="hidden" class="form-control" name="Codigo" v-model="Codigo">
                                <div class="row">
                                    <div class="col-md-6 pr-md-1">
                                        <div class="form-group">
                                            <label for="Nome">Nome</label>
                                            <input type="text" class="form-control" placeholder="Nome da Quadra" name="Nome" data-vv-as="Nome" v-model="Nome" v-validate="'required'">
                                            <span v-show="errors.has('Nome')" class="alert-form">{{ errors.first('Nome') }}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 pr-md-1">
                                        <div class="form-group">
                                            <label for="Nome">Endereço</label>
                                            <input type="text" class="form-control" placeholder="Endereço" name="Endereco" data-vv-as="Endereço" v-model="Endereco" v-validate="'required'">
                                            <span v-show="errors.has('Endereco')" class="alert-form">{{ errors.first('Endereco') }}</span>
                                        </div>
                                    </div>
                                    <div class="col-md-2 pr-md-1">
                                        <div class="form-group">
                                            <label for="Nome">Número</label>
                                            <input type="text" class="form-control" placeholder="Número" name="Numero" data-vv-as="Número" v-model="Numero" v-validate="'required'">
                                            <span v-show="errors.has('Numero')" class="alert-form">{{ errors.first('Numero') }}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 pr-md-1">
                                        <div class="form-group">
                                            <label for="Nome">Bairro</label>
                                            <input type="text" class="form-control" placeholder="Bairro" name="Bairro" data-vv-as="Bairro" v-model="Bairro" v-validate="'required'">
                                            <span v-show="errors.has('Bairro')" class="alert-form">{{ errors.first('Bairro') }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-fill btn-primary" v-on:click="appMain.validateData($event, this.appQuadra)">Salvar</button>
                                <button class="btn btn-fill btn-info" v-on:click="appMain.cancelForm($event)">Cancelar</button>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_DeleteRegisterPartial.cshtml")
</div>

@section Scripts{
    <script src="~/js/Quadra.vue.js"></script>
}