@using Sistema.TSTOnline.Domain.Utils;

@{
    ViewData["Title"] = "MOVIMENTAÇÃO DE ESTOQUE";
}

<div class="row justify-content-center">
    <div class="btn-group">
        <a href="/estoque/MovimentoEstoqueAddEdit" class="btn btn-primary">
            <i class="fa fa-plus fa-lg"></i> Nova Movimentação
        </a>
        <button class="btn btn-danger" onClick="backToHome()"><i class="fa fa-undo fa-lg"></i> Voltar</button>
    </div>
</div>

<div class="table-responsive">
    <table id="tblMovimentoEstoque" class="table table-striped table-bordered table-hover">
        <thead class="text-uppercase">
            <tr>
                <th data-column-id="id" data-type="numeric">Código</th>
                <th width="10%" data-column-id="dataMovimento">Data Movimento</th>
                <th width="20%" data-column-id="origemDescricao">Origem</th>
                @*<th width="10%" data-column-id="sku">SKU</th>*@
                <th width="30%" data-column-id="nome">Produto</th>
                <th width="20%" data-column-id="tipoDescricao">Tipo</th>
                <th width="10%" data-column-id="qtde">Qtde</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

</div>

@section Scripts{
    <script src="~/js/estoque/movimentoEstoque.js?v=@Helper.GetVersion()"></script>
}